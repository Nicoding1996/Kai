{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@sveltejs/adapter-vercel"
    },
    {
      "src": "server/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}